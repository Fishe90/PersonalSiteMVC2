
@{
    ViewBag.Title = "My Portfolio";
}

<h2 style="text-align: center; font-size: 50px; padding-top: 20px">@ViewBag.Title</h2>
<br />
<h3 style="text-align: center">Projects I created during my time at Centriq.</h3>
<br />

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
    </ol>
    <div class="carousel-inner">
        @* FED1 Studio Project *@
        <div class="carousel-item active">
            <a href="http://frontendstudio.dillonfisher.com/" target="_blank">
                <img class="d-block w-100" src="~/Content/img/FED1_Snippet.JPG" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Project: FED1 Studio</h5>
                    <p>This project was created using purely Front-End.</p>
                </div>
            </a>
        </div>
        @* Dungeon Application *@
        <div class="carousel-item">
            <a href="https://github.com/Fishe90/DungeonApplication" target="_blank">
                <img class="d-block w-100" src="~/Content/img/Game_Snippet.JPG" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Project: Dungeon Application</h5>
                    <p>C# emulator of the popular Pokemon game series.</p>
                </div>
            </a>
        </div>
        @* StoreFront *@
        <div class="carousel-item">
            <a href="http://storefront.dillonfisher.com/" target="_blank">
                <img class="d-block w-100" src="~/Content/img/StoreFront_Snippet.JPG" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Project: StoreFront</h5>
                    <p>Ecommerce website connected to SQL Database.</p>
                </div>
            </a>
        </div>
        @* GitHub *@
        <div class="carousel-item">
            <a href="https://github.com/Fishe90?tab=repositories" target="_blank">
                <img class="d-block w-100" src="~/Content/img/GitHub.JPG" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>My GitHub</h5>
                    <p>Link to my project repositories.</p>
                </div>
            </a>
        </div>
        @* Scheduling Admin Tool *@
        <div class="carousel-item">
            <a href="#" target="_blank">
                <img class="d-block w-100" src="~/Content/img/StoreFront_Snippet.JPG" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Project: Admin Tool</h5>
                    <p>This project was created purely Front-End.</p>
                </div>
            </a>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

