    @RenderSection("scripts", required: false)
    <script>
        //use the selector values found in your stylesheet for the active class
        $('.nav .navtab').each(function () {
            //In this example, the class of active is attached to the li, so we must look further into anchor href to determine if it matches the browser URL
            if ($(this).find('a').attr('href') == window.location.pathname) {
                //if they match add the correct class name
                $(this).addClass('active');
                //$(this) refers to the li prior to the each function
            }
        });
    </script>
